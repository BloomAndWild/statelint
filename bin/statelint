require 'statelint'

linter = StateMachineLint::Linter.new

failing = nil

# arguments are JSON filenames
ARGV.each do |file|
  problems = linter.validate(file)

  if !problems.empty?
    failing = true
    header = (problems.size == 1) ? "One error" : "#{problems.size} errors"
    puts header + " for #{file}:"
    problems.each do |problem|
      puts " #{problem}"
    end
  end
end

if failing
    exit 1
end

